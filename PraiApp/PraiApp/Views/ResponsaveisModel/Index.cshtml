@model IEnumerable<PraiApp.Models.ResponsavelModel>

@{
    ViewData["Title"] = "Responsáveis";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>Responsáveis</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeResponsavel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CpfResponsavel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeResponsavel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CpfResponsavel)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdResponsavel" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.IdResponsavel" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.IdResponsavel" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
